<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ba.unsa.etf.rpr.projekat.FlightController"
            prefHeight="400.0" prefWidth="600.0">

    <stylesheets>
        <URL value="@../css/style.css"/>
    </stylesheets>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>

        <Label fx:id="idLabel" GridPane.rowIndex="1" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="ID"/>

        <TextField fx:id="idField" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>

        <Label fx:id="codeLabel" GridPane.rowIndex="2" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="Code"/>

        <TextField fx:id="codeField" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity"/>


        <Label fx:id="airplaneLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="Airplane"/>

        <TextField fx:id="airplaneField" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity"/>

        <Label fx:id="nameLabel" GridPane.rowIndex="4" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="Name"/>

        <TextField fx:id="nameField" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity"/>


        <Label fx:id="codeLabel" GridPane.rowIndex="5" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="Code"/>

        <TextField fx:id="codeField" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="Infinity"/>

        <Label fx:id="flightTypeLabel" GridPane.rowIndex="6" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="Flight type"/>

        <TextField fx:id="flightTypeField" GridPane.rowIndex="6" GridPane.columnIndex="1" maxWidth="Infinity"/>


        <Label fx:id="userLabel" GridPane.rowIndex="7" GridPane.columnIndex="0"
               maxHeight="Infinity" maxWidth="Infinity" text="User"/>

        <TextField fx:id="userField" GridPane.rowIndex="7" GridPane.columnIndex="1" maxWidth="Infinity"/>


        <ButtonBar GridPane.rowIndex="10" GridPane.columnSpan="2">
            <GridPane.margin>
                <Insets top="25"/>
            </GridPane.margin>
            <buttons>
                <Button text="OK" fx:id="okButton" ButtonBar.buttonData="RIGHT" onAction="#potvrdiFormuBtn" />
                <Button text="Prekini" fx:id="cancelButton" ButtonBar.buttonData="LEFT" onAction="#prekiniFormuBtn" />
            </buttons>
        </ButtonBar>

    </children>

</AnchorPane>
