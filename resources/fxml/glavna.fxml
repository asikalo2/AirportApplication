<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<VBox maxHeight="Infinity" minHeight="Infinity" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ba.unsa.etf.rpr.projekat.Controller">

    <stylesheets>
        <URL value="@../css/style.css"/>
    </stylesheets>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <fx:define>
        <ToggleGroup fx:id="toggleGroup1"/>
    </fx:define>
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="Options" fx:id="menuOpcije">
                <items>
                    <RadioMenuItem onAction="#postaviSQLite" text="SQLite" fx:id="menuDb" toggleGroup="$toggleGroup1"/>
                    <RadioMenuItem onAction="#postaviXML" text="XML" fx:id="menuXml" toggleGroup="$toggleGroup1"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <TabPane maxWidth="Infinity" maxHeight="Infinity">

        <tabs>
            <Tab text="Flights" fx:id="flightsTab">
                <VBox>
                    <ToolBar>
                        <items>
                            <Region styleClass="spacer"/>
                            <HBox styleClass="segmented-button-bar">
                                <Button fx:id="tbAddFlight" onAction="#addFlight" minWidth="50" styleClass="first"/>
                                <Button fx:id="tbRemoveFlight" onAction="#removeFlight" minWidth="50"/>
                                <Button fx:id="tbEditFlight" onAction="#editFlight" minWidth="50" styleClass="last"/>
                            </HBox>
                        </items>
                    </ToolBar>
                    <TableView fx:id="tableFlights" style="-fx-aligmnent: CENTER;">
                        <columns>
                            <TableColumn fx:id="idColumn1" prefWidth="50.0" text="Id"/>
                            <TableColumn fx:id="nazivProizvodjacaColumn1" prefWidth="180.0" text="Naziv Proizvodjaca"/>
                            <TableColumn fx:id="nazivModela1" prefWidth="200.0" text="Model"/>
                            <TableColumn fx:id="brojSasijeColumn1" prefWidth="150.0" text="Broj Sasije"/>
                            <TableColumn fx:id="brojRegColumn1" prefWidth="150.0" text="Registracija"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Airplanes" fx:id="airplanesTab">
                <VBox>
                    <ToolBar>
                        <items>
                            <Region styleClass="spacer"/>
                            <HBox styleClass="segmented-button-bar">
                                <Button fx:id="tbAddAirplane" onAction="#addAirplane" minWidth="50" styleClass="first"/>
                                <Button fx:id="tbRemoveAirplane" onAction="#removeAirplane" minWidth="50"/>
                                <Button fx:id="tbEditAirplane" onAction="#editAirplane" minWidth="50" styleClass="last"/>
                            </HBox>
                        </items>
                    </ToolBar>
                    <TableView fx:id="tabelaAirplanes" style="-fx-aligmnent: CENTER;">
                        <columns>
                            <TableColumn fx:id="idColumn1" prefWidth="50.0" text="Id"/>
                            <TableColumn fx:id="nazivProizvodjacaColumn1" prefWidth="180.0" text="Naziv Proizvodjaca"/>
                            <TableColumn fx:id="nazivModela1" prefWidth="200.0" text="Model"/>
                            <TableColumn fx:id="brojSasijeColumn1" prefWidth="150.0" text="Broj Sasije"/>
                            <TableColumn fx:id="brojRegColumn1" prefWidth="150.0" text="Registracija"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Passengers" fx:id="passengersTab">
                <VBox>
                    <ToolBar>
                        <items>
                            <Region styleClass="spacer"/>
                            <HBox styleClass="segmented-button-bar">
                                <Button fx:id="tbAddPassenger" onAction="#addPassenger" minWidth="50" styleClass="first"/>
                                <Button fx:id="tbRemovePassenger" onAction="#removePassenger" minWidth="50"/>
                                <Button fx:id="tbEditPassenger" onAction="#editPassenger" minWidth="50" styleClass="last"/>
                            </HBox>
                        </items>
                    </ToolBar>
                    <TableView fx:id="tabelePassenger" style="-fx-aligmnent: CENTER;">
                        <columns>
                            <TableColumn fx:id="idColumn1" prefWidth="50.0" text="Id"/>
                            <TableColumn fx:id="nazivProizvodjacaColumn1" prefWidth="180.0" text="Naziv Proizvodjaca"/>
                            <TableColumn fx:id="nazivModela1" prefWidth="200.0" text="Model"/>
                            <TableColumn fx:id="brojSasijeColumn1" prefWidth="150.0" text="Broj Sasije"/>
                            <TableColumn fx:id="brojRegColumn1" prefWidth="150.0" text="Registracija"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Airlines" fx:id="airlinesTab">
                <VBox>
                    <ToolBar>
                        <items>
                            <Region styleClass="spacer"/>
                            <HBox styleClass="segmented-button-bar">
                                <Button fx:id="tbAddAirline" onAction="#addAirline" minWidth="50" styleClass="first"/>
                                <Button fx:id="tbRemoveAirline" onAction="#removeAirline" minWidth="50"/>
                                <Button fx:id="tbEditAirline" onAction="#editAirline" minWidth="50" styleClass="last"/>
                            </HBox>
                        </items>
                    </ToolBar>
                    <TableView fx:id="tableAirline" style="-fx-aligmnent: CENTER;">
                        <columns>
                            <TableColumn fx:id="idColumn1" prefWidth="50.0" text="Id"/>
                            <TableColumn fx:id="nazivProizvodjacaColumn1" prefWidth="180.0" text="Naziv Proizvodjaca"/>
                            <TableColumn fx:id="nazivModela1" prefWidth="200.0" text="Model"/>
                            <TableColumn fx:id="brojSasijeColumn1" prefWidth="150.0" text="Broj Sasije"/>
                            <TableColumn fx:id="brojRegColumn1" prefWidth="150.0" text="Registracija"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

        </tabs>
    </TabPane>
</VBox>